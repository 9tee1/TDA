    "## Dice rolling simulator\n",
    "import random\n",
    "while True:\n",
    "    choice = input(\"would you like to roll the die? (yes or no)\")\n",
    "    if choice != \"yes\":\n",
    "        if choice == \"no\":\n",
    "            print(\"Thanks for playing\")\n",
    "            break\n",
    "    random.randint(1,12)\n",
    "    print(random.randint(1,12))\n"
   ]
